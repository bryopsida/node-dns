{
  "name": "@bryopsida/node-dns",
  "version": "0.1.0",
  "description": "A DNS server with a focus on being programatically managed and monitored",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "prepare": "husky",
    "test": "node --test \"**/*.spec.js\" \"*.spec.js\"",
    "lint": "standard . && prettier . --check",
    "lint:fix": "standard --fix . && prettier . --write",
    "commit": "cz"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/bryopsida/node-dns.git"
  },
  "keywords": [
    "dns"
  ],
  "author": "bryopsida",
  "license": "Unlicense",
  "bugs": {
    "url": "https://github.com/bryopsida/node-dns/issues"
  },
  "homepage": "https://github.com/bryopsida/node-dns#readme",
  "os": [
    "darwin",
    "linux"
  ],
  "engines": {
    "node": ">=20"
  },
  "devDependencies": {
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "husky": "^9.0.11",
    "prettier": "^3.2.5",
    "standard": "^17.1.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
